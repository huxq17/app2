<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="home_top_three_button">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:textSize">@dimen/content_textSize</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="ContentTextStyle">
        <item name="android:textSize">@dimen/content_textSize</item>
        <item name="android:textColor">@color/contentTextColor</item>
        <item name="android:textColorHint">@color/contentHintColor</item>
    </style>

    <style name="passTextStyle">
        <item name="android:textSize">@dimen/content_textSize</item>
        <item name="android:textColor">@color/contentTextColor</item>
        <item name="android:textColorHint">@color/contentHintColor</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <!--<item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>-->
    </style>



    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/bottom_anim_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_anim_dialog_out</item>
    </style>
</resources>
