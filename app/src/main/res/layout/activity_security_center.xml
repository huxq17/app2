<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include
        android:id="@+id/nav_layout"
        layout="@layout/layout_title" />

    <LinearLayout
        android:id="@+id/modifyPhone"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/modify_phone" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_weight="1"
            android:text="@string/modify_phone"
            android:textColor="@color/gray_text_color"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="7dp"
            android:layout_height="13dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:background="@color/line" />

    <LinearLayout
        android:id="@+id/modifyLoginPw"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/modify_login_pw" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_weight="1"
            android:text="@string/modify_login_pw"
            android:textColor="@color/gray_text_color"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="7dp"
            android:layout_height="13dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:background="@color/line" />

    <LinearLayout
        android:id="@+id/modifyTransactionPw"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/modify_transaction_pw" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_weight="1"
            android:text="@string/modify_transaction_pw"
            android:textColor="@color/gray_text_color"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="7dp"
            android:layout_height="13dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:background="@color/line" />

    <LinearLayout
        android:id="@+id/retrieveTransactionPw"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/retrieve_transaction_pw" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_weight="1"
            android:text="@string/retrieve_transaction_pw"
            android:textColor="@color/gray_text_color"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="7dp"
            android:layout_height="13dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:background="@color/line" />


</LinearLayout>