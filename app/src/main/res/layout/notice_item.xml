<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/prof_left_margin"
    android:paddingRight="@dimen/prof_left_margin"
    android:paddingTop="15dp">

    <TextView
        android:id="@+id/v_notice_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textColor="#4c4c4c"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/v_notice_date"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/v_notice_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4c4c4c"
        android:textSize="11sp"
        app:layout_constraintTop_toBottomOf="@id/v_notice_title"
        app:layout_constraintBottom_toTopOf="@id/notice_item_divider"/>


    <View
        android:id="@+id/notice_item_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/devider_height"
        android:background="@color/notice_divider"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/v_notice_date"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>